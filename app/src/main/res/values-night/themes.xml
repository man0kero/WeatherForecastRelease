<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherForecast" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#85464449</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="MyCustomToolbarTitleStyle" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="TextStyle">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="main_button_style">
        <item name="cornerRadius">18dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="MyTextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/mtrl_textinput_default_box_stroke_color</item> <!-- Цвет обводки -->
        <item name="boxStrokeErrorColor">@color/mtrl_textinput_default_box_stroke_color</item> <!-- Цвет обводки при ошибке -->
        <item name="hintTextColor">@color/mtrl_textinput_default_box_stroke_color</item> <!-- Цвет подсказки -->
        <item name="android:textColorHint">@color/mtrl_textinput_default_box_stroke_color</item> <!-- Цвет подсказки для старых устройств -->
        <item name="endIconTint">@color/mtrl_textinput_default_box_stroke_color</item>
        <item name="startIconTint">@color/mtrl_textinput_default_box_stroke_color</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginVertical">6dp</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
    </style>

</resources>